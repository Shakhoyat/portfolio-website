            <!-- Dynamic Gallery Items from Model -->
            @if (Model.Photos?.Any() == true)
            {
                @foreach (var item in Model.Photos)
                {
                    <div class="gallery-item" data-category="@item.Category.ToLower()" data-title="@item.Title" data-description="@item.Description">
                        <div class="gallery-card bg-white dark:bg-gray-800 rounded-xl overflow-hidden shadow-lg hover:shadow-xl transition-all duration-300">
                            <div class="relative overflow-hidden h-48">
