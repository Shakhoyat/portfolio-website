@model PersonalInfo
@{
    ViewData["Title"] = "Edit Personal Information";
}

<div class="max-w-4xl mx-auto">
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow">
        <div class="p-6 border-b border-gray-200 dark:border-gray-700">
            <h2 class="text-xl font-semibold text-gray-900 dark:text-white">Edit Personal Information</h2>
        </div>
        
        <form asp-action="Edit" method="post" class="p-6">
            <div asp-validation-summary="ModelOnly" class="text-red-600 mb-4"></div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label asp-for="FullName" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"></label>
                    <input asp-for="FullName" class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-white" />
                    <span asp-validation-for="FullName" class="text-red-600 text-sm"></span>
                </div>
                
                <div>
                    <label asp-for="Title" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"></label>
                    <input asp-for="Title" class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-white" />
                    <span asp-validation-for="Title" class="text-red-600 text-sm"></span>
                </div>
                
                <div class="md:col-span-2">
                    <label asp-for="AboutMe" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">About Me (Extended Bio)</label>
                    <textarea asp-for="AboutMe" rows="4" class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-white"></textarea>
                    <span asp-validation-for="AboutMe" class="text-red-600 text-sm"></span>
                </div>
                
                <div>
                    <label asp-for="Email" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"></label>
                    <input asp-for="Email" type="email" class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-white" />
                    <span asp-validation-for="Email" class="text-red-600 text-sm"></span>
                </div>
                
                <div>
                    <label asp-for="Phone" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"></label>
                    <input asp-for="Phone" class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-white" />
                    <span asp-validation-for="Phone" class="text-red-600 text-sm"></span>
                </div>
                
                <div>
                    <label asp-for="Location" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"></label>
                    <input asp-for="Location" class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-white" />
                    <span asp-validation-for="Location" class="text-red-600 text-sm"></span>
                </div>
                
                <div>
                    <label asp-for="ResumeUrl" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"></label>
                    <input asp-for="ResumeUrl" type="url" class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-white" />
                    <span asp-validation-for="ResumeUrl" class="text-red-600 text-sm"></span>
                </div>
                
                <div class="md:col-span-2">
                    <label asp-for="ProfileImageUrl" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"></label>
                    <input asp-for="ProfileImageUrl" type="url" class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-white" />
                    <span asp-validation-for="ProfileImageUrl" class="text-red-600 text-sm"></span>
                </div>
                
                <div class="md:col-span-2">
                    <label asp-for="Bio" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Short Bio</label>
                    <textarea asp-for="Bio" rows="6" class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-white"></textarea>
                    <span asp-validation-for="Bio" class="text-red-600 text-sm"></span>
                </div>
            </div>
            
            <div class="flex items-center justify-end space-x-4 mt-8 pt-6 border-t border-gray-200 dark:border-gray-700">
                <a asp-action="Index" class="px-4 py-2 text-gray-700 dark:text-gray-300 bg-gray-100 dark:bg-gray-700 hover:bg-gray-200 dark:hover:bg-gray-600 rounded-lg">
                    Cancel
                </a>
                <button type="submit" class="px-6 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg">
                    <i class="fas fa-save mr-2"></i>Save Changes
                </button>
            </div>
            
            <input asp-for="Id" type="hidden" />
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
